{
  "name": "Плагин по улучшению сайта sdo.tusur.ru",
  "description": "t.me/tarodictrl",
  "version": "1.2",
  "manifest_version": 3,
  "options_page": "pages/options.html",
  "action": {
    "default_popup": "pages/options.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://sdo.tusur.ru/*",
        "*://ocenka.tusur.ru/*"
      ],
      "js": [
        "js/redirect.js",
        "js/filter.js",
        "js/TableCleaner.js",
        "js/pdf.js",
        "js/theme.js",
        "js/buttons.js"
      ],
      "run_at": "document_start"
    }
  ],
  "host_permissions": [
    "*://sdo.tusur.ru/*",
    "*://ocenka.tusur.ru/*"
  ],
  "permissions": [
    "storage"
  ]
}